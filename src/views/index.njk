{% extends "deps/_layout.njk" %}

{% set headerClass = "home" %}
{% set pageId = "home" %}
{% set pageTitle = "Home" %}

{% block headerEnd %}
	<a href="{{ root }}/pages/classes.html" class="button header__nav__button">See Classes</a>
{% endblock %}

{% block content %}
	<div class="header__hero">
		<div class="header__hero__content">
			<img alt="Art of Cooking logo" src="{{ root }}/media/logo-blue.svg">
			<a class="button button--bigger" href="{{ root }}/pages/classes.html">See Classes</a>
		</div>

		<img class="header__hero__image" alt="4 People crowded around big pans cooking" src="{{ root }}/media/people-cooking.jpg">

		<div class="paint-bottom"></div>
	</div>
	
	<div class="page" style="padding-top: 2rem;">
		<h1 class="text-center">The Art of Cooking</h1>
		<h2 class="text-center h3 bottom-space">Institute of Culinary Arts</h2>

		<div class="home-video">
			<img src="{{ root }}/media/video-thumbnail.jpg" alt="Video thumbnail showing various vegetables and a knife on a chopping board">

			<img class="home-video__play" alt="video play button" src="{{ root }}/media/play-button.svg">
		</div>
	</div>

